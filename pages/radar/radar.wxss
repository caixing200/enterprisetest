/**index.wxss**/

.rootNode {
  height: 100%;
}

.titles {
  box-sizing: border-box;
  height: 25%;
  padding: 40rpx 60rpx 0 60rpx;
}

.canvasBox {
  height: 65%;
}

.btnBox {
  height: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 0 60rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.company {
  font-size: 50rpx;
  font-weight: 700;
  text-align: center;
}

.companySum {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
}

.sum {
  font-size: 66rpx;
  float: right;
}

.companyPercent {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
}

.percent {
  font-size: 56rpx;
  float: right;
}

.percentAfter {
  font-size: 36rpx;
}

.btn {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-weight: 600;
  font-size: 36rpx;
}
.navBtn {
  text-align: center;
  border-radius: 12rpx;
}
