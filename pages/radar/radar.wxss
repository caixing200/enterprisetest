/**index.wxss**/

.rootNode {
  height: 100%;
}

.titles {
  box-sizing: border-box;
  height: 32%;
  padding: 40rpx 30rpx 0 30rpx;
}

.canvasBox {
  height: 58%;
}

.btnBox {
  height: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 0 60rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.company {
  font-size: 60rpx;
  font-weight: 700;
  text-align: center;

}

.companySum {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
}

.sum {
  font-size: 66rpx;
  float: right;
}

.companyPercent {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
}

.percent {
  font-size: 56rpx;
  float: right;
}

.percentAfter {
  font-size: 36rpx;
}

.btn {
  width: 190rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-weight: 600;
  font-size: 28rpx;
}

.navBtn {
  text-align: center;
  border-radius: 12rpx;
}

.selects {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 9999;
}

.selectBox {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 400rpx;
  height: 300rpx;
  border-radius: 12rpx;
}

.selectBtn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-weight: 600;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}
.canvasView {
  position: absolute;
  top: 0;
  left: 100%;
  width: 100%;
  height: 100%;
}
