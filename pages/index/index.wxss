/**index.wxss**/
.rootNode {
  background-image: url(http://p9jd05hzv.bkt.clouddn.com/times.png);
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position-y: 300rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.title-style {
  font-size: 70rpx;
  font-weight: 700;
}
.btnStyle {
  font-size: 46rpx;
  font-weight: 800;
}
.footStyle {
  font-weight: 500;
  font-size: 34rpx;
}
.marginB {
  margin-bottom: 26rpx;
}
.marginT {
  margin-top: 200rpx;
}
.titleMargin {
  flex: 7;
  box-sizing: border-box;
  padding: 10% 0 40% 0;
}
.txt {
  flex: 4;
}
.footMargin {
  flex: 3;
}
.btnBox {
  display: inline-block;
  width: 600rpx;
  height: 100rpx;
}
.btnBox button {
  width: 100%;
  height: 100%;
  line-height: 2;
}