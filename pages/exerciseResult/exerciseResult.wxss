/* pages/exerciseResult/exerciseResult.wxss */

.inputBox {
  height: 60%;
}

.textArea {
  height: 30%;
}

.btnBox {
  height: 10%;
  box-sizing: border-box;
  padding: 0 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  font-weight: 500;
}

.btn:nth-child(2) {
  background-color: #04c38e;
  color: #fff;
}
.inputBox {
  box-sizing: border-box;
  padding: 15% 5% 0 5%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.inputView {
  flex: 1;
}
.inputs {
  box-sizing: border-box;
  display: flex;
  margin-top: 16rpx;
}
.input {
  flex: 9;
  box-sizing: border-box;
  border: 2rpx solid #000;
  height: 80rpx;
  line-height: 80rpx;
}
.holder {
  flex: 1;
  box-sizing: border-box;
  display: inline-block;
  text-align: center;
  padding: 20rpx 0;
  color: #ff0000;
}
.inputTitle {
  font-weight: 800;
}
.textArea {
  box-sizing: border-box;
  padding: 0 5%;
}
.textA {
  box-sizing: border-box;
  width: 100%;
  height: 70%;
  margin-top: 16rpx;
  border: 2rpx solid #000;
}
textarea {
  width: 100%;
  height: 100%;
}
